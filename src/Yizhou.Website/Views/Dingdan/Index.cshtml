@{
    ViewBag.Title = "订单";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script type="text/javascript" src='@this.Url.Content("~/js/dingdanGuanliPage.js")'></script>
<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="row btn-toolbar" >
                <div class="col-sm-4">
                    <form class="input-group">
                        <input id="txtKeyword" type="text" class="form-control">
                        <div class="input-group-btn">
                            <button type="submit" id="btnSearch" class="btn btn-default">查询</button>
                            <button id="btnPopoverSearch" class="btn btn-default" >
                                <span class="caret"></span>
                            </button>
                        </div><!-- /btn-group -->
                    </form>
                </div>
                <div class="col-sm-8">
                    <div class="btn-group">
                        <a id="btnCreate" href="@this.Url.Action("Create")" class="btn btn-default"><i class="glyphicon glyphicon-plus"></i>创建</a>
                        <button id="btnDelete" class="btn btn-default"><i class="glyphicon glyphicon-trash"></i>删除</button>
                        <button id="btnShengchengChuhuodan" class="btn btn-default"><i class="glyphicon glyphicon-book"></i>生成出货单</button> 
                        <button id="btnExport" class="btn btn-default">导出Excel</button> 
                    </div>
                </div>
            </div>

            <div id="dingdanGrid">
                
            </div>
        
            <div id="dingdanGridPager" class="pull-right" style="height: 30px">
            
            </div>
        </div>
    </div>
</div>
@{this.Html.RenderPartial("SearchPopover");}
<script type="text/javascript">
    $(function(){
        $("body").dingdanGuanliPage();
    })
</script>