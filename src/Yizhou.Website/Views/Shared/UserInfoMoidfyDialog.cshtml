<div class="modal fade" >
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h3 class="modal-title">修改个人信息</h3>
            </div>
            <form class="form-horizontal">
                <div class="modal-body"> 
                    <div class="form-group">
                        <label class="control-label" style="width: 100px" >姓名<span style="color: Red">*</span></label>
                        <div class="col-8" >
                            <input type="text" class="form-control webui-textbox" name="name" data-required="true"/>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label" style="width: 100px" >Email</label>
                        <div class="col-8" >
                            <input type="text"  class="form-control webui-textbox" name="email" data-pattern="@Html.Raw(@"^[\w-]+(\.[\w-]+)*@[\w-]+(\.[\w-]+)+$")"/>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label" style="width: 100px" >旧密码</label>
                        <div class="col-8" >
                            <input type="password" class="form-control webui-textbox"  name="oldPassword" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label" style="width: 100px" >新密码</label>
                        <div class="col-8" >
                            <input type="password" class="form-control webui-textbox"  name="newPassword"/>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label" style="width: 100px" >新密码确认</label>
                        <div class="col-8" >
                            <input type="password" class="form-control webui-textbox"  name="confirmNewPassword"/>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button class="btn btn-primary btnOk" type="submit">确定</button>
                    <button class="btn btn-default" type="button" data-dismiss="modal" aria-hidden="true" >关闭</button>
                </div>
            </form>
        </div>
    </div>
</div>